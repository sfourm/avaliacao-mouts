{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=developer_evaluation;Username=admin;Password=root;"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyForJwtTokenGenerationThatShouldBeAtLeast32BytesLong"
  },
  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      },
      "FormatterName": "simple"
    }
  },
  "WebApiSettings": {
    "BasePath": "developer-evaluation",
    "DisplayName": "DeveloperEvaluationApi",
    "ProjectName": "DeveloperEvaluationApi",
    "EnableScalar": "true"
  },
  "OpenTelemetry": {
    "ServiceName": "Ambev.DeveloperEvaluation",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "Exporters": {
      "Console": {
        "Enabled": true,
        "LogLevel": "Information"
      },
      "Otlp": {
        "Enabled": true,
        "Endpoint": "http://otel-collector:4317"
      },
      "Prometheus": {
        "Enabled": true,
        "MetricsRoute": "/metrics",
        "ScrapeEndpointPort": 9090
      }
    },
    "Instrumentation": {
      "AspNetCore": true,
      "HttpClient": true,
      "Npgsql": true
    }
  },
  "Prometheus": {
    "CollectHttpMetrics": true,
    "CollectProcessMetrics": true
  },
  "MessagingConfiguration": {
    "Consumer": {
      "ConcurrencyLimit": 2,
      "PrefetchCount": 5,
      "Retries": 2,
      "SleepDurationInSeconds": 1,
      "InitialIntervalInSeconds": 0
    },
    "Broker": {
      "Port": 5672,
      "VirtualHost": "/"
    }
  },
  "AllowedHosts": "*"
}
