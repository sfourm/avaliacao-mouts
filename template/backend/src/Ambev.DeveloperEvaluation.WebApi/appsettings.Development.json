{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "FormatterName": "simple"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=developer_evaluation;Username=admin;Password=root;"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyForJwtTokenGenerationThatShouldBeAtLeast32BytesLong"
  },
  "EFCoreConfiguration": {
    "EnableSensitiveDataLogging": true,
    "RunMigrations": true,
    "EnableLog": true
  },
  "OpenTelemetry": {
    "ServiceName": "Ambev.DeveloperEvaluation",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "Exporters": {
      "Console": {
        "Enabled": false,
        "LogLevel": "Information"
      },
      "Otlp": {
        "Enabled": true,
        "Endpoint": "http://otel-collector:4317"
      },
      "Prometheus": {
        "Enabled": true,
        "MetricsRoute": "/metrics",
        "ScrapeEndpointPort": 9090
      }
    },
    "Instrumentation": {
      "AspNetCore": true,
      "HttpClient": true,
      "Npgsql": true
    }
  },
  "Prometheus": {
    "CollectHttpMetrics": true,
    "CollectProcessMetrics": true
  },
  "MessagingConfiguration": {
    "Consumer": {
      "ConcurrencyLimit": 1,
      "PrefetchCount": 1
    },
    "Broker": {
      "Host": "127.0.0.1",
      "Port": "5672",
      "Username": "guest",
      "Password": "guest"
    }
  }
}
