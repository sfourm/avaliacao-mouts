{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=DeveloperEvaluation;User Id=sa;Password=Pass@word;TrustServerCertificate=True"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyForJwtTokenGenerationThatShouldBeAtLeast32BytesLong"
  },
  "EFCoreConfiguration": {
    "EnableSensitiveDataLogging": true,
    "RunMigrations": true,
    "EnableLog": true
  },
  "OpenTelemetry": {
    "ServiceName": "Ambev.DeveloperEvaluation",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "Exporters": {
      "Console": {
        "Enabled": true,
        "LogLevel": "Information"
      },
      "Otlp": {
        "Enabled": true,
        "Endpoint": "http://otel-collector:4317"
      },
      "Prometheus": {
        "Enabled": true,
        "MetricsRoute": "/metrics",
        "ScrapeEndpointPort": 9090
      }
    },
    "Instrumentation": {
      "AspNetCore": true,
      "HttpClient": true,
      "Npgsql": true
    }
  },
  "Prometheus": {
    "CollectHttpMetrics": true,
    "CollectProcessMetrics": true
  }
}
